# MarketEdge Retail Analytics â€” Sales Margin Analysis

# ğŸ§© Import Libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# ğŸ“¥ Load Sample Dataset
sales = pd.read_csv('../data/sample_sales_data.csv')

# ğŸ” Basic Data Overview
print("Shape of dataset:", sales.shape)
print("\nPreview:")
display(sales.head())

# ğŸ§¹ Data Cleaning
sales.drop_duplicates(inplace=True)
sales['date'] = pd.to_datetime(sales['date'])

# ğŸ§® Calculate Margin
sales['margin'] = sales['revenue'] - sales['cost']
sales['margin_pct'] = round((sales['margin'] / sales['revenue']) * 100, 2)

# ğŸ“Š Pareto Analysis â€” Top 20% Stores Driving 80% of Margin
pareto = sales.groupby('store')['margin'].sum().reset_index().sort_values('margin', ascending=False)
pareto['cum_margin_pct'] = pareto['margin'].cumsum() / pareto['margin'].sum() * 100

# ğŸ–¼ï¸ Visualization
plt.figure(figsize=(10,6))
sns.barplot(data=pareto.head(15), x='store', y='margin', palette='viridis')
plt.xticks(rotation=45)
plt.title('Top 15 Stores by Margin')
plt.xlabel('Store')
plt.ylabel('Margin ($)')
plt.tight_layout()
plt.show()

# ğŸ’¡ Insights Summary
top_20_pct = pareto[pareto['cum_margin_pct'] <= 80]
print(f"Number of stores driving 80% of margin: {len(top_20_pct)}")
print(f"Total margin from top stores: ${top_20_pct['margin'].sum():,.2f}")
